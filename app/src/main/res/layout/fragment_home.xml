<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".Vistas.Fragmentos.HomeFragment">

    <GridLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center"

        >

        <androidx.cardview.widget.CardView
            android:id="@+id/boton_bluetooth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"

            app:cardElevation="20dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"

            android:foreground="@drawable/efecto_ripple"
            android:focusable="true"
            android:clickable="true"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_bluetooth_searching_24"
                    android:layout_gravity="center"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="@string/encuentra_ndispositivos_n_bluetooth"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_margin="8dp"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/api_busca_cancion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"


            app:cardElevation="20dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"

            android:foreground="@drawable/efecto_ripple"
            android:focusable="true"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_queue_music_24"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="@string/encuentra_esa_n_canci_n_y_n_compartela"
                    android:fontFamily="sans-serif-condensed"

                    android:layout_margin="8dp"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:id="@+id/camara"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"


            app:cardElevation="20dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"

            android:foreground="@drawable/efecto_ripple"
            android:focusable="true"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_camera_24"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="Comparte tus \n resultados"
                    android:fontFamily="sans-serif-condensed"

                    android:layout_margin="8dp"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </GridLayout>

</FrameLayout>